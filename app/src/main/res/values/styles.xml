  <style name="TextAppearance.Base" parent="TextAppearance.AppCompat" />

  <style name="TextAppearance.Base.NavMenu">
    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="textColor">@color/black</item>
  </style>

  <style name="NavMenuItem">
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:paddingEnd">@dimen/spacing_zero</item>
    <item name="android:paddingStart">@dimen/spacing_large</item>
  </style>

  <style name="ScryButton" parent="android:Widget.Button">
    <item name="android:textColor">?attr/textColorOnPrimary</item>
    <item name="android:minHeight">@dimen/min_button_height</item>
    <item name="android:foreground">?selectableItemBackground</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:letterSpacing">@dimen/button_letter_spacing</item>
    <item name="android:elevation">@dimen/button_elevation</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>

  <style name="HeaderText" parent="android:TextAppearance.Widget.TextView">
    <item name="android:fontFamily">@font/roboto_medium</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/text_size_extra_large</item>
