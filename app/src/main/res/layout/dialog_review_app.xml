<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:layout_margin="@dimen/spacing_medium"
  android:orientation="vertical"
  android:padding="@dimen/spacing_medium">

  <TextView
    android:id="@+id/actual_header"
    style="@style/HeaderText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_large"
    android:text="@string/review_app_hello" />

  <TextView
    android:id="@+id/app_review_sub_header"
    style="@style/SubSubHeaderText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_large"
    android:layout_marginEnd="@dimen/spacing_large"
    android:layout_marginStart="@dimen/spacing_large"
    android:text="@string/review_app_are_you_enjoying"
    android:textSize="@dimen/text_size_very_large" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_large"
    android:layout_marginTop="@dimen/spacing_large"
    android:orientation="horizontal">

    <View
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />

    <TextView
      android:id="@+id/app_review_nahhh"
      style="@style/ScryButton.Transparent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spacing_small"
      android:layout_weight="1"
      android:text="@string/review_app_nahhh"
      android:visibility="visible" />

    <TextView
      android:id="@+id/app_review_yes"
      style="@style/ScryButton.Transparent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spacing_small"
      android:layout_weight="1"
      android:text="@string/review_app_oh_yeah"
      android:visibility="visible" />

    <TextView
      android:id="@+id/app_review_cancel"
      style="@style/ScryButton.Transparent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spacing_small"
      android:layout_weight="1"
      android:text="@string/review_app_cancel"
      android:visibility="gone" />

    <TextView
      android:id="@+id/app_review_rate"
      style="@style/ScryButton.Transparent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spacing_small"
      android:layout_weight="1"
      android:text="@string/review_app_rate"
      android:visibility="gone" />

    <TextView
      android:id="@+id/app_review_send_feedback"
      style="@style/ScryButton.Transparent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spacing_small"
      android:layout_weight="1"
      android:text="@string/review_app_send_feedback"
      android:visibility="gone" />

  </LinearLayout>

</LinearLayout>
